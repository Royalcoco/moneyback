from flask import Flask, request, jsonify
import random

app = Flask(__name__)

@app.route("/", methods=["POST"])
def analyze_image():
    data = request.json
    image_data = data.get("details")
    # Simuler une analyse
    features = {
        "colors": ["red", "blue", "green"],
        "shapes": ["circle", "square"],
        "confidence": random.uniform(0.8, 0.99)
    }
    return jsonify({"analysis": features})

if __name__ == "__main__":
    app.run(port=5001)
